.main-chat
  .header
    .header__left
      %h2.header__left__group
        = @group.name
      %ul.header__left__number
        number :
        %li.header__left__number--list
          - @group.user.each do |user|
            = user.name
    .header__right
      = link_to edit_group_path(@group.id) do
        .header__right__btn
          Edit
  .boby
    .message
      = render @messages
      .message__name
        %p.message__name--date
          名前
        %p.message__name--time
          2020/05/28(Wed) 12:12:12
      .message__text
        投稿した内容
  .from
    = form_for [@group, @message] do |f|
      .new-message
        = f.text_field :content, class: 'form__message', placeholder: 'type a message'
        = f.label :image, class: 'input-box__img' do
          = icon('fas', 'image', class: 'icon')
          = f.file_field :image, class: 'hidden'
      = f.submit 'Send', class: 'input-btn'

        
