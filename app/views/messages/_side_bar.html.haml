.side-bar
  .side-bar__header
    .side-bar__header--box
      %p.side-bar__header__box--name
        = current_user.name
      %ul.side-bar__header__box--icon
        %li.list
          = link_to new_group_path do
            = icon('fas', 'pen-square', class: 'icon')
        %li.list
          = link_to edit_user_path(current_user) do
            = icon('fas', 'cog', class: 'icon')
  .side-bar__footer
    - current_user.groups.each do |group|
      .side-bar__footer__group
        = link_to group_messages_path(group) do
          .side-bar__footer__group__name
            = group.name
          .side-bar__footer__group__list
            = group.show_last_message